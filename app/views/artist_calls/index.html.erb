<%- model_class = ArtistCall -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:user_request_id) %></th>
      <th><%= model_class.human_attribute_name(:recording_url) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @artist_calls.each do |artist_call| %>
      <tr>
        <td><%= link_to artist_call.id, artist_call_path(artist_call) %></td>
        <td><%= artist_call.user_request_id %></td>
        <td><%= artist_call.recording_url %></td>
        <td><%=l artist_call.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_artist_call_path(artist_call), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      artist_call_path(artist_call),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_artist_call_path,
            :class => 'btn btn-primary' %>
