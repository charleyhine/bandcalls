<%- model_class = UserRequest -%>
<div class="page-header">
  <h1><%=t '.title', :default => 'Contacting ' + @user_request.artist.name + '...' %></h1>
  <h3><%=t '.title', :default => "your personalized message will be sent to " + @user_request.user.phone %></h3>
</div>

<dl class="dl-horizontal">
  <dt><strong>Message:</strong></dt>
  <dd><%= @user_request.copy %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.destroy', :default => t("Cancel request")),
              user_request_path(@user_request),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
